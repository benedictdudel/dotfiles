set cmd:long-running 1
# Disable beep for long running command executions
# Source: https://lftp.yar.ru/lftp-man.html

set cmd:csh-history no
# Enable csh-like history expansion
# Source: https://lftp.yar.ru/lftp-man.html

set cmd:default-protocol ftp
# Set FTP as the default protocol
# Source: https://lftp.yar.ru/lftp-man.html

set cmd:ls-default "ls -lh"
# Default ls command is ls -lh
# Source: https://lftp.yar.ru/lftp-man.html

set cmd:queue-parallel 1
# Run three jobs in parallel in a queue
# Source: https://lftp.yar.ru/lftp-man.html

set cache:enable no
# Disable caching
# Source: https://lftp.yar.ru/lftp-man.html

set cmd:remote-completion yes
# Enable remote completion
# Source: https://lftp.yar.ru/lftp-man.html
